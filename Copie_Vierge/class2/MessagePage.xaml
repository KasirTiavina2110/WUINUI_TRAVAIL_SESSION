<Page
    x:Class="class2.MessagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:class2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="MessageTitle" FontSize="24" FontWeight="Bold" Foreground="Navy" HorizontalAlignment="Center"/>
            <TextBlock x:Name="MessageContent" FontSize="16" Foreground="Sienna" Margin="0,10"/>
            <Button Content="Retour" HorizontalAlignment="Center" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>