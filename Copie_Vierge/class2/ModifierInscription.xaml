<Page
    x:Class="class2.ModifierInscription"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:class2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- InfoBar pour afficher les messages d'erreur -->
        <InfoBar x:Name="infoBar"
                 IsOpen="False"
                 Severity="Error"
                 Title="Erreur"
                 Message="Les informations saisies existent déjà ou sont invalides." />

        <ScrollViewer>
            <StackPanel Margin="20">
                <TextBlock Text="Modifier une inscription" FontSize="24" FontWeight="Bold" Margin="0 0 0 20" />

                <!-- ComboBox pour numero_identification -->
                <TextBlock Text="Adhérent" />
                <ComboBox x:Name="comboNumeroIdentification"
                          PlaceholderText="Sélectionnez un adhérent"
                          Width="300" />

                <!-- ComboBox pour id_seance -->
                <TextBlock Text="Séance" Margin="0 20 0 0" />
                <ComboBox x:Name="comboIdSeance"
                          PlaceholderText="Sélectionnez une séance"
                          Width="300" />

                <!-- Boutons Modifier, Annuler et Supprimer -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 30 0 0">
                    <Button x:Name="btnModifier"
                            Content="Modifier"
                            Click="btnModifier_Click"
                            Width="100" Margin="10" />
                    <Button x:Name="btnAnnuler"
                            Content="Annuler"
                            Click="btnAnnuler_Click"
                            Width="100" Margin="10" />
                    <Button x:Name="btnSupprimer"
                            Content="Supprimer"
                            Click="btnSupprimer_Click"
                            Width="100" Margin="10" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
